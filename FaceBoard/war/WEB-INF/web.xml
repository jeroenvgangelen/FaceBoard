<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
              http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	version="2.5" xmlns="http://java.sun.com/xml/ns/javaee">

	<!-- Servlets -->

	<servlet>
		<servlet-name>FBDataSourceImpl</servlet-name>
		<servlet-class>nl.tucuxi.faceboard.server.FBDataSourceImpl</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>FBDataSourceImpl</servlet-name>
		<url-pattern>/nl.tucuxi.faceboard.MyFaceBoard/FBDataSource</url-pattern>
	</servlet-mapping>

	<!-- Default page to serve -->
	<welcome-file-list>
		<welcome-file>MyFaceboard.html</welcome-file>
	</welcome-file-list>

</web-app>
